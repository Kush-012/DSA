class Solution {
    public int pivotIndex(int[] nums) {
        int arr[]=new int[nums.length];
        arr[0]=nums[0];
        for(int i=1;i<nums.length;i++){
            arr[i]=nums[i]+arr[i-1];
        }
        for(int i=0;i<nums.length;i++){
            int l=arr[i]-nums[i];
            int r=arr[arr.length-1]-arr[i];
            if(l==r){
                return i;
            }
        }
        return -1;
    }
} 
