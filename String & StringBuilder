import java.util.*;

public class Main {
    public static void main(String[] args) {
      String str="Kush"; // stored in string pool
      String strr=new String("Nothing is immpossible"); //stored in heap
      System.out.println(str); 
      String store=str.toUpperCase();
      System.out.println(store); 
      System.out.println(str.length()); 
      System.out.println(str.charAt(1)); 
      
      // string is immutable in java
      // it modifies like str=str+"m"; now str points to kushm earlier it points to kush it repoints to new location 
      // which consume lot of memory
      
      StringBuilder s=new StringBuilder("Hello");
      s.reverse();
      System.out.println(s); 
      s.append("3");
       System.out.println(s.toString()); 
      
  }
} 
