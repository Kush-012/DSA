class Solution {
    public int maxSubarraySum(int[] arr, int k) {
        // Code here
        int maxi=Integer.MIN_VALUE;
        int sum=0;
        for(int i=0;i<k;i++){
            sum+=arr[i];
        }
        maxi=sum;
        int j=0;
        for(int i=k;i<arr.length;i++){
            sum-=arr[j];
            sum+=arr[i];
            j++;
            maxi=Math.max(maxi,sum);
        }
        return maxi;
        
    }
} 
